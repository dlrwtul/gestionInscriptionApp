{% extends 'form.html.twig' %}
{% block body %}
<div>
    <a href="{{ path('app_inscription_index') }}" class="btn gap-2 m-2 absolute left-10 shadow-md">
        Etudiants
        <div class="badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-backspace" viewBox="0 0 16 16">
                <path d="M5.83 5.146a.5.5 0 0 0 0 .708L7.975 8l-2.147 2.146a.5.5 0 0 0 .707.708l2.147-2.147 2.146 2.147a.5.5 0 0 0 .707-.708L9.39 8l2.146-2.146a.5.5 0 0 0-.707-.708L8.683 7.293 6.536 5.146a.5.5 0 0 0-.707 0z"/>
                <path d="M13.683 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-7.08a2 2 0 0 1-1.519-.698L.241 8.65a1 1 0 0 1 0-1.302L5.084 1.7A2 2 0 0 1 6.603 1h7.08zm-7.08 1a1 1 0 0 0-.76.35L1 8l4.844 5.65a1 1 0 0 0 .759.35h7.08a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1h-7.08z"/>
            </svg>
        </div>
    </a>

    <a href="{{ path('app_inscription_new') }}" class="btn gap-2 m-2 absolute right-10 shadow-md">
        Inscription
        <div class="badge">
            
        </div>
    </a>
</div>
<div class="add-inscription re" id="re-form">
    {% if verify == false %}
    <form action="{{ path('app_inscription_new_re')}}" method="post" class="form w-full relative bottom-20 flex justify-center" >
        <input type="text" name="matricule" id="matricule-re" placeholder="saisir le matricule" class="input input-bordered input-info w-full max-w-xs mx-2" />
        <button class="btn">{{ button_label|default('Verify') }}</button>
    </form>
    {% endif %}
   
    {% if verify == true %}
    <div class="flex flex-col absolute right-5 bottom-20">
        <button class="btn gap-2 my-1">
            Derniere Annee d'inscription
            <div class="badge">{{ info.lastYear }}</div>
        </button>
        <button class="btn gap-2">
            Derniere Classe d'inscription
            <div class="badge">{{ info.lastClasse }}</div>
        </button>
    </div>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Inscire') }}</button>
    {{ form_end(form) }}
    {% endif %}

</div>
{% endblock %}