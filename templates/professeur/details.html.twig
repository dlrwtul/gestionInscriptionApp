{% extends 'base.html.twig' %}

{% block title %}Professeur{% endblock %}

{% block body %}
    <a href="{{ path('app_professeur_index') }}" class="btn gap-2 m-2 absolute left-10 shadow-md">
        Retour
        <div class="badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-backspace" viewBox="0 0 16 16">
                <path d="M5.83 5.146a.5.5 0 0 0 0 .708L7.975 8l-2.147 2.146a.5.5 0 0 0 .707.708l2.147-2.147 2.146 2.147a.5.5 0 0 0 .707-.708L9.39 8l2.146-2.146a.5.5 0 0 0-.707-.708L8.683 7.293 6.536 5.146a.5.5 0 0 0-.707 0z"/>
                <path d="M13.683 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-7.08a2 2 0 0 1-1.519-.698L.241 8.65a1 1 0 0 1 0-1.302L5.084 1.7A2 2 0 0 1 6.603 1h7.08zm-7.08 1a1 1 0 0 0-.76.35L1 8l4.844 5.65a1 1 0 0 0 .759.35h7.08a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1h-7.08z"/>
            </svg>
        </div>
    </a></div>
    <div class="m-20 p-10 flex flex-row justify-between bg-gray-300 border-4 border-black rounded">
        <div class="m-4 text-black text-3xl">
            <span class="text-blue-700">Nom complet </span> : {{ professeur.nomComplet }}<br /><br />
            <span class="text-blue-700">Grade </span> : {{ professeur.grade }}
        </div>
        <div class="m-5 w-1/2 flex ">
            <ul class="w-full"> <span class="text-gray-700 text-xl">Modules du professeur</span>
                {% for module in professeur.modules %}
                    <li class="my-1"><button class="btn no-animation w-1/2">{{ module.libelle }}</button></li>
                {% endfor %}
            </ul>
            <ul class="w-full"><span class="text-gray-700 text-xl">Classes du professeur</span>
                {% for classe in professeur.classes %}
                    <li class="my-1"><button class="btn no-animation w-1/2">{{ classe.libelle }}</button></li>
                {% endfor %}
            </ul>
        </div>
    </div> 
{% endblock %}
