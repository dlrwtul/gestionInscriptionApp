{% extends 'base.html.twig' %}

{% block title %}Hello ProfesseurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<button class="btn gap-2 m-2">
  Total Professeurs
  <div class="badge"> {{ professeurs.getTotalItemCount }}</div>
</button>

<div class="container overflow-x-auto">
  <table class="table w-full border-b-2 border-gray-800">
    <!-- head -->
    <thead>
        <tr>
            <th>Nom Complet</th>
            <th>Grade</th>
            <th>Details</th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        {% for professeur in professeurs %}
            <tr>
                <td scope="row">{{ professeur.nomComplet}}</td>
                <td>{{ professeur.grade}}</td>
                <td><button class="btn btn-sm btn-primary mr-4">Details</button></td>
                <td>
                    <button class="btn btn-sm btn-warning mr-4">Modifier</button>
                    <button class="btn btn-sm btn-error ml-4">Supprimer</button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
  </table>
</div>
<div class="navigation">
    {{ knp_pagination_render(professeurs) }}
</div>
{% endblock %}
