{% extends 'base.html.twig' %}

{% block title %}Hello ProfesseurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="my-9">
    <div class="badge badge-lg shadow-sm animate-bounce">Total {{ professeurs.getTotalItemCount }}</div>

    <a href="{{ path('app_professeur_new') }}" class="btn gap-2 m-2 absolute right-10 shadow-md">
    Ajouter Professeur
    <div class="badge">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
        </svg>
    </div>
    </a>
</div>

<div class="container overflow-x-auto ">
  <table class="table w-full">
    <!-- head -->
    <thead>
        <tr>
            <th>Nom Complet</th>
            <th>Grade</th>
            <th>Details</th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        {% for professeur in professeurs %}
            <tr>
                <td scope="row">{{ professeur.nomComplet}}</td>
                <td>{{ professeur.grade}}</td>
                <td><a href="{{ path('app_professeur_show',{'id': professeur.id,'classe': professeur}) }}" class="btn btn-sm btn-primary mr-4">details</a></td>
                <td>
                    <a href="{{ path('app_professeur_edit',{'id': professeur.id,'classe': professeur}) }}" class="btn btn-sm btn-warning mr-4">Modifier</a>
                    <a href="{{ path('app_professeur_delete',{'id': professeur.id,'classe': professeur}) }}" class="btn btn-sm btn-error ml-4 del-classe">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
  </table>
</div>
<div class="navigation  w-full flex justify-center m-4">
    {{ knp_pagination_render(professeurs) }}
</div>
{% endblock %}
