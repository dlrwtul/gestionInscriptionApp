    <div class="hero p-36 bg-base-200 rounded w-full">
        <div class="hero-content flex-col lg:flex-row-reverse w-full">
            <div class="text-center lg:text-left w-2/3">
                <h1 class="text-5xl font-bold">Se Connecter!</h1>
                <p class="py-6">Application de gestion d'inscription pour ecole </p>
            </div>
            <div class="card flex-shrink-0 w-1/3 max-w-sm shadow-2xl bg-base-100">
                <div class="card-body">
                    <div class="form-control">
                        <label for="inputLogin" class="label">
                            <span class="label-text">Email</span>
                        </label>
                        <input type="text" value="{{ last_username }}" name="login" id="inputLogin" placeholder="email" class="input input-bordered" autocomplete="current-password" required />
                    </div>

                    <div class="form-control">
                        <label for="inputPassword" class="label">
                            <span class="label-text">Mot de Passe</span>
                        </label>
                        <input type="password" name="password" id="inputPassword" placeholder="password" class="input input-bordered" autocomplete="current-password" required />
                    </div>

                    <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="form-control mt-6">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


